
<div class="well">
		<a href="/dashboard" class="btn"><i class="icon-chevron-left"></i> Back</a>	
		<hr />	
		<h1>Edit <%= resource_name.to_s.humanize %></h1>
</div>

<div class="well">
<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
  	<%= f.input :name, :required => true%>
  	<%= f.input :surname, :required => true%>
    <%= f.input :email, :hint => "Enter your email address", :required => true %>
    <%= f.input :password, :hint => "Enter new password (leave blank if you don't want to change it)" %>
    <%= f.input :password_confirmation, :hint => "Confirm new password" %>
    <%= f.input :current_password, :hint => "Enter current password (we need your current password to confirm your changes)",:required => true %>
  <% end %>
  </div>
  <%= f.buttons do %>
    <%= f.commit_button :button_html => {:class => "primary"} %>
  <% end %>
<% end %>
<h3>Cancel my account</h3>
 
<p class="well">Unhappy? 
	<%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>
