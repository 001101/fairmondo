									<%=form_for :user , :url => session_path(:user) , :html => { :class =>"navbar-form pull-right" } do  |f|%>
			
										<%= f.text_field :email, :class => "input-small", :placeholder => t('common.text.email')%>
										<%= f.password_field :password, :class => "input-small", :placeholder => t('common.text.password')%>
										<% if Devise.mappings[:user].rememberable? -%> <label for="remember_me" class="checkbox inline" >
											<input type="checkbox" name="_spring_security_remember_me" id="remember_me" checked="checked"/>
											 <%=t('user.remember') %></label> &nbsp;
										<% end -%>
										<%= f.submit t('common.text.login'), :class => "btn btn-inverse"  %>
									<%end -%>
		
								<%end%>
							</div>
							
							
						
