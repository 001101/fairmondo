<%= semantic_form_for @auction do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :title,   :hint => t('auction.hints.title') %>
    <%= f.input :content, :hint => t('auction.hints.content') %>
    
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button :button_html => {:class => "primary"} %>
  <% end %>
<% end %>
