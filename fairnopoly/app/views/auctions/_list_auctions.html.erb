
	
		<ul class="thumbnails">
		<% @auctions.each do |auction| %>
			
		        <li class="span3">
		          <div class="thumbnail" style="position: relative;">
		            <% if auction.title_image%>
						<%= link_to image_tag(auction.title_image.image.url(:thumb), :size=> "260x180"), auction %>
					<%else%>
						<%= link_to image_tag("http://placehold.it/260x180" ,:size=> "260x180"), auction %>
					<%end%>
		            <div class="caption">
		              <h5><%= link_to auction.title, auction %></h5>
		               
		            </div>
		            <% case auction.condition
		          	when "new"
		            		bclass="badge-info"
		            when "old"
		            		bclass="badge-inverse"
		            when "fair"
		            		bclass="badge-success"
		            	end
		            %>
		         
		           
		            <span class="badge <%= bclass %> in-image"><%= auction.condition_text %></span>
		         </div>
		         
		        </li>
		      
		<%end%>
		</ul>

	
	
		
	
<%= will_paginate @auctions %>