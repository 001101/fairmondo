<%= tinymce_assets %>

  <% if @content.new_record? && @content.key %>
    <h1><%= I18n.t('tinycms.content.not_exists', :url => @content.key ) %></h1>
    <div>
    	<%= I18n.t('tinycms.content.may_be_created') %>
    </div>
  <% end %>
<%= form_for(@content) do |f| %>

  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @content.new_record? && @content.key %>
	<%= f.hidden_field :key %>
  <% else %>
    <%= f.text_field :key %>
  <% end %>
  <div class="fields">
  
  <%= tinycms_field(f, :body) %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
