  <h1>Listing invitations</h1>

  <table class="table table-bordered">
  <tr>
  <th>Name</th>
  <th>Email</th>
  <th>Relation</th>
  </tr>

  <haml:silent> @invitations.each do |invitation|
  </haml:silent><haml:block>  <tr>
  <td><haml:loud> link_to 'Show', invitation_path(invitation) </haml:loud></td>
  <td><haml:loud> invitation.name </haml:loud></td>
  <td><haml:loud> invitation.email </haml:loud></td>
  <td><haml:loud> invitation.relation </haml:loud></td>
  </tr>
  </haml:block></table>

  <br />

  <haml:loud> link_to 'New Invitation', new_invitation_path </haml:loud>
