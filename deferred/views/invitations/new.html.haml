.row
  .span12
    .fairnopoly-well
      .span3
        = link_to (raw glyphicons("icon-chevron-left")) +" "+ t('common.actions.back'), :back , :class => "btn"
      %h1= t('invitation.titles.new')
      %br/
      %h3= t('invitation.intro')
      %h3= t('invitation.intro2')
  .span6
    .fairnopoly-well
      - if !@user
        = render 'form'
      - else
        = render 'form_registered'
  .span6
    .alert.alert.alert-info
      %strong
        %i.icon-info-sign
        = t('invitation.notices.header.important')
      %br/
      %p
        = t('invitation.notices.important')
    .fairnopoly-well
      %strong
        %i.icon-question-sign
        = t('invitation.notices.header.data')
      %br/
      %p
        = t('invitation.notices.data')
    .fairnopoly-well
      %strong
        %i.icon-question-sign
        = t('invitation.notices.header.problems')
      %br/
      %p
        = t('invitation.notices.problems')
