.row
  .span12
    %div
      = link_to (raw glyphicons("icon-chevron-left")) +" "+ t('common.actions.back'), :back , :class => "btn"
    %table.table.table-bordered
      %tr
        %td
          %p
            %b
              = t('common.text.name')
              \:
            = @invitation.name
      %tr
        %td
          %p
            %b
              = t('common.text.email')
              \:
            = @invitation.email
      %tr
        %td
          %p
            %b
              = t('common.text.relation')
              \:
            = @invitation.relation
