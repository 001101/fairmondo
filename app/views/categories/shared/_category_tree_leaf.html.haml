- if search_cache && search_cache.searched_category == category
  %span{title: category.name}
    %b
      = category.name
- else
  %a.Search-colored-link{href: category_path(category, article_search_form: search_cache.change(category_id: category.id)), title: category.name, data: { remote: 'true' }}
    = category.name
