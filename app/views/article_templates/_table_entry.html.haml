= if article_template && article_template.article
  %tr
    %td= article_template.name
    %td= article_template.article.title
    %td= link_to t('formtastic.actions.template_select.submit'), new_article_path(:template_select => {:article_template => article_template.id} )
    %td= link_to t('common.actions.edit'), edit_article_template_path(article_template)
    %td= link_to t('common.actions.destroy'), article_template, method: :delete, data: { confirm: t('common.actions.confirm') }
