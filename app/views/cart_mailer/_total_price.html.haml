.total
  %table
    %tr
      %td
        = t('cart.texts.totals.total_net_price')
      %td
        = humanized_money_with_symbol abacus.business_transaction_listing.total_net_price
    %tr
      %td
        = t('cart.texts.totals.total_vat')
      %td
        = humanized_money_with_symbol abacus.business_transaction_listing.total_vat
    %tr
      %td
        = t('cart.texts.totals.total_retail_price')
      %td
        = humanized_money_with_symbol abacus.business_transaction_listing.total_retail_price
    %tr
      %td
        = t('cart.texts.totals.total_transport')
      %td
        = humanized_money_with_symbol abacus.transport_listing.total_transport
    %tr
      %td
        %strong
          = t('cart.texts.totals.total')
      %td
        %strong
          = humanized_money_with_symbol abacus.total
    %tr
      %td
        = t('email.cart.buyer.selected_payment')
      %td
        = abacus.payment_listing.payments.keys.uniq.map{ |p| t("email.payments.#{ p.to_s }") }.to_sentence(options = { two_words_connector: ' und ', last_word_connector: ' und ' })
