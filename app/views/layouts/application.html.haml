/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
/ [if gt IE 8]><!
%html.no-js
  / <![endif]
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}

    %title= title
    %meta{ name: 'keywords', content: meta_keywords }
    %meta{ name: 'description', content: meta_description }

    %meta{:content => "width=device-width", :name => "viewport"}
    = stylesheet_link_tag 'application'
    /[if lt IE 8]
      = stylesheet_link_tag 'font-awesome-ie7.min.css', media: 'all'

    %script{:src  => "//use.typekit.net/kli6gpf.js"}
    :javascript
      try{Typekit.load();}catch(e){}

    = javascript_include_tag "application"

    = csrf_meta_tags
    = favicon_link_tag "favicon.ico" , :rel => "shortcut icon", :type => "image/x-icon"
    / Google Analytics
    :javascript
      var _gaq = _gaq || [];
        			_gaq.push(['_setAccount', 'UA-37465097-1']);
        			_gaq.push(['_trackPageview']);

        			(function() {
          			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        			})();
  %body
    .notice.is-hidden
      - if !flash.empty?
        - flash.each do |type, msg|
          - if msg && !msg.empty?
            = render_notice :type => type do
              %p
                = msg.html_safe
      = render_data_confirm

    %header.l-Header
      .l-Inner
        .Logo
          %h1
            %a{:href => "/"}
              %img{:src => image_path('logo.png'), :alt => "Fairnopoly Logo"}
        %nav.Nav.Nav--primary
          %ul
            %li
              = link_to "<i class='icon icons-buy'></i> ".html_safe + t('common.text.buy') , articles_path
            %li
              = link_to "<i class='icon icons-sell'></i> ".html_safe + t('common.text.sell') , new_article_path
            /
              %li#service.main-nav-item
                %a
                  t('common.text.service')
            - if user_signed_in?
              %li
                = link_to "<i class='icon icons-account'></i> ".html_safe + t('common.text.profile') , user_path(current_user)
              %li
                = link_to "<i class='icon icons-logout'></i> ".html_safe + t('common.actions.logout') , destroy_user_session_path

              /
                - if current_user.trustcommunity == true
                  %li#community.main-nav-item
                    t('common.text.community')


            - else
              %li
                - if @login
                  .Form.Form--login.is-hidden
                    = @login.html_safe
                  = link_to "<i class='icon icons-account'></i> ".html_safe + t('common.actions.login') , new_user_session_path , :id =>"login-popover" , "data-placement" => "bottom" , "data-title" => t('common.actions.login')
                - else
                  = link_to "<i class='icon icons-account'></i> ".html_safe + t('common.actions.login') , new_user_session_path
        / row
      / container
    .l-Hero
      .l-Inner
        = hero
    .l-Main{:role => "main"}
      .l-Inner
        = yield
      / .container
    / #main
    %footer.l-Footer
      .Footer--top
        .l-Inner
          .Logo
            %h4
              %a{:href => "/"}
                %img{:src => image_path('logo-small.png'), :alt => "Fairnopoly Logo"}
          %nav.Nav.Nav--meta
            %ul
              %li
                %a{:href => "/faq"}
                  = t('footer.faq')
              %li
                %a{:href => "http://info.fairnopoly.de/forum/"}
                  = t('footer.forum')
              %li
                %a{:href => "/contact"}
                  = t('footer.contact')
              %li
                %a{:href => "/about_us"}
                  = t('footer.about_us')
              %li
                %a{:href => "/philosophy"}
                  = t('footer.philosophy')
              %li
                %a{:href => "http://info.fairnopoly.de/team/"}
                  = t('footer.team')
              %li
                %a{:href => "http://info.fairnopoly.de"}
                  = t('footer.blog')
              - if current_user && current_user.admin?
                %li
                  = link_to t('users.menu.admin'), "/admin"
          .Social
      .Footer--bottom
        .l-Inner
          .Copyright
            %p &copy; Copyright 2013 fairnopoly
          .Nav.Nav--legal
            %ul
              %li
                %a{:href => "/agb"}
                  = t('footer.agb')
              %li
                %a{:href => "/privacy"}
                  = t('footer.privacy')
              %li
                %a{:href => "/imprint"}
                  = t('footer.imprint')
