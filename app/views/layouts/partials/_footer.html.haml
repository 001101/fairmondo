- reduced_layout = false unless local_assigns.has_key? :reduced_layout

#l-footer{class: ('l-reduced' if reduced_layout)}
  - unless reduced_layout
    %a#l-footer-logo{href: '/'}
      %span.sprite_logo_small

  %ul.l-footer-nav#l-footer-feedback_links
    %li= link_to t('common.text.help'), new_feedback_path(variety: :get_help)
    %li= link_to t('common.text.feedback'), new_feedback_path(variety: :send_feedback)
    %li= link_to t('common.text.shares'), 'http://info.fairnopoly.de/anteile-zeichnen/', target: '_blank', id: 'l-feedback-shares'

  - unless reduced_layout
    %ul.l-footer-nav#l-footer-normal_links
      %li= link_to t('footer.faq'), '/faq', target: '_blank'
      %li= link_to t('footer.forum'), 'https://info.fairnopoly.de/forum/', target: '_blank'
      %li= link_to t('footer.contact'), '/contact', target: '_blank'
      %li= link_to t('footer.about_us'), '/about_us', target: '_blank'
      %li= link_to t('footer.transparency'), 'https://transparenz.fairnopoly.de/', target: '_blank'
      %li= link_to t('footer.press'), 'https://info.fairnopoly.de/pressekit/', target: '_blank'
      %li= link_to t('footer.team'), 'https://info.fairnopoly.de/team/', target: '_blank'
      %li= link_to t('footer.jobs'), 'https://info.fairnopoly.de/stellenausschreibungen/', target: '_blank'
      - if User.is_admin? current_user
        %li= link_to t('users.menu.admin'), '/admin'
        %li= link_to 'Manage Pages', '/contents'
        %li= link_to 'Statistics', '/statistics/general'
      %li= link_to t('footer.pr_material'), 'http://info.fairnopoly.de/fairnopoly-werbematerial/', target: '_blank'
      %li= link_to t('footer.blog'), 'https://info.fairnopoly.de', target: '_blank'
      %li= link_to t('footer.newsletter'), 'http://50856.seu1.cleverreach.com/f/50856-129361/', target: '_blank'

  %ul.l-footer-nav#l-footer-legal_links
    %li= link_to t('footer.agb'), '/agb', target: '_blank'
    %li= link_to t('footer.privacy'), '/privacy', target: '_blank'
    %li= link_to t('footer.imprint'), '/imprint', target: '_blank'

  %p#l-footer-copyright &copy; Copyright 2014 Fairnopoly eG
