%ul
  %li
    = link_to t('header.sell'), new_article_path
  %li.JS-active-toggle--container
    = link_to t('header.community'), 'https://info.fairnopoly.de/forum/', class: 'JS-active-toggle--trigger'
    %ul.l-header-nav-dropdown.JS-active-toggle--target
      %li= link_to t('header.forum'), 'https://info.fairnopoly.de/forum/'
      %li= link_to t('header.hero'), 'https://helden.fairnopoly.de/'
      %li= link_to t('header.facebook'), 'https://www.facebook.com/fairnopoly'
      %li= link_to t('header.developer'), 'https://github.com/fairnopoly/fairnopoly'

  - if user_signed_in?
    %li
      = link_to t('header.profile'), user_path(current_user)
    %li
      = link_to t('common.actions.logout'), destroy_user_session_path

  - else
    %li
      = link_to t('common.actions.login'), new_user_session_path, :id => "login-link"