          li
            = link_to t('.subscription.surprise_box'),
              'http://abo.fairmondo.de/gridpage/die-fairmondo-ueberraschungsbox',
              target: '_blank'
          li
            = link_to t('.subscription.fair_world'),
              'http://abo.fairmondo.de/gridpage/das-fairmondo-soli-abo',
              target: '_blank'

      / Cooperative
      section#l-footer-nav-cooperative
        h4
          = t('.cooperative.heading')
        ul
          li
            = link_to t('.cooperative.twopointzero'),
              '/genossenschaft',
