            = link_to t('.community.forum'),
              'https://forum.fairmondo.de/',
              target: '_blank'

      / Service
      section
        h4
          = t('.service.heading')
        ul
          li
            = link_to t('.service.faq'),
              '/faq'
          li
            / TODO: or ':send_feedback'
            = link_to t('.service.help_or_feedback'),
              new_feedback_path(variety: :get_help)
