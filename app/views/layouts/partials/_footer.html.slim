          li
            = link_to t('.community.forum'),
              'https://forum.fairmondo.de/',
              target: '_blank'

      / Service
      section#l-footer-nav-service
        h4
          = t('.service.heading')
        ul
          li
            = link_to t('.service.faq'),
              '/faq',
              data: navigation_push
          li
            = link_to t('.service.help'),
              new_feedback_path(variety: :get_help)
          li
            = link_to t('.service.feedback'),
              new_feedback_path(variety: :send_feedback)
          li
            = link_to t('.service.contact'),
              '/kontact',
              data: navigation_push


    .l-footer-banner
      / Logo
      a.l-footer-banner-logo href='/'
        = image_tag 'logo_small.png', alt: t('shared.fairmondo.name')

      / Social media
      ul.l-footer-banner-socialmedia
        li>
          = link_to 'https://www.facebook.com/fairmondo',
            title: t('.socialmedia.facebook'),
            target: '_blank' do
            = fa_icon 'facebook 2x'
        li
          = link_to 'https://twitter.com/fairmondo',
            title: t('.socialmedia.twitter'),
            target: '_blank' do
            = fa_icon 'twitter 2x'


    / Copyright
    p.l-footer-copyright
      = t('.copyright_html')
      | &emsp; &ndash; &emsp;
      = link_to t('.legal.agb'),
        '/agb',
        data: navigation_push
      | &emsp;
      = link_to t('.legal.privacy'),
        '/datenschutz',
        data: navigation_push
      | &emsp;
      = link_to t('.legal.impressum'),
        '/impressum',
        data: navigation_push
