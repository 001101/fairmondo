      / Community
      section#l-footer-nav-community
        h4
          = t('.community.heading')
        ul
          li
            = link_to t('.community.participate'),
              'http://mitmachen.fairmondo.de/',
              target: '_blank'
          li
            = link_to t('.community.ambassador_programme'),
              'http://mitmachen.fairmondo.de/botschafterprogramm/was-ist-das-botschafterprogramm/',
              target: '_blank'
