          li
            = link_to t('.subscription.fair_world'),
              'http://abo.fairmondo.de/gridpage/das-fairmondo-soli-abo'
          li
            = link_to t('.subscription.bonus_programme'),
              ''

      / Cooperative
      section
        h4
          = t('.cooperative.heading')
        ul
          li
            = link_to t('.cooperative.twopointzero'),
              ''
          li
            = link_to t('.cooperative.subscribe_shares'),
              'http://mitmachen.fairmondo.de/anteile-zeichnen/',
              target: '_blank'

      / Community
