<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<title>Fairnopoly</title>
		<meta name="description" content="">
		<meta name="viewport" content="width=device-width">
		<%= stylesheet_link_tag 'application' %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		
	</head>
	<body>
		<!--[if lt IE 8]>
			<p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
		<![endif]-->

		<header>
			<div class="container">
				<div class="row">
					<div class="span4">
						<h1 id="title">
							<a href="/">
								<span>Fairnopoly</span>
							</a>
						</h1>
					</div>
					<div class="8">
						<ul id="main-nav">
							<li id="buy">
								<%= link_to "Einkaufen" , auctions_path %>
							</li>
							<li id="sell">
								<%= link_to "Verkaufen" , new_auction_path %>
							</li>
							<li id="service">
								<a href="">
									Service
								</a>
							</li>
							<% if user_signed_in? %>
								<li id="login">
									<%= link_to('Logout', destroy_user_session_path ) %>
								</li>
								<li id="login">
									<%= link_to "Profil" , dashboard_path  %>
								</li>
								
							<% else %>
								<li id="login">
									<%= link_to "Login" , new_user_session_path %>
								</li>
							<% end %>
							
						</ul>
					</div>
				</div> <!-- row -->
			</div> <!-- container -->
		</header>
		<div id="main" role="main">
			<form id="searchform">
				<div class="container">
					<div class="row">
						<div class="span6 offset6">
							<form class="form-search pullright">
								<input type="search" class="search-query" placeholder="Suche nach fairen Produkten">
								<button type="submit" class="btn">Suche</button>
							</form>
						</div>
					</div>
				</div>
			</form>
			
		
			
			<div class="container">
				
					<% flash.each do |type, msg| -%>
			<div class="row">
				<div class="span12">
					<a class="close" data-dismiss="alert">×</a>
					<p class="alert alert-<%= bootstrap_notice_mapper(type)%>" >
						<%= msg %>
					</p>
				</div>
			</div>
			<%end%>
			<% begin %>
			<%= render 'hero/'+ params[:controller] + '/' + params[:action] %>
			<%rescue MissingTemplate %>
				<% begin %>
				<%= render 'hero/'+ params[:controller] + '/default' %>
				<%rescue MissingTemplate %>
				<%end%>
			<%end%>
				
				
			<%= yield %>	
				
				
				
				
			</div> <!-- .container -->
		</div> <!-- #main -->
		<footer>
			<div class="container">
				<div class="row">
					<div class="span4">
						<h3>
							<a href="">
								Impressum
							</a>
						</h3>
					</div>
					<div class="span4">
						<h3>
							<a href="">
								Über Uns
							</a>
						</h3>
						<ul>
							<li>
								<a href="">
									Philosophie
								</a>
							</li>
							<li>
								<a href="">
									Team
								</a>
							</li>
							<li>
								<a href="">
									Kontakt
								</a>
							</li>
							<% if current_user.admin? %>
								<li>
									<%= link_to t('dashboard.menu.admin'), "/admin" %>
								</li>
							<% end %>
						</ul>
					</div>
					<div class="span4">
						<h3>
							FAQ &amp; Hilfe
						</h3>
					</div>
				</div> <!-- row -->
			</div> <!-- container -->
			<div id="sub-footer">
				&copy; fairnopoly 2012
			</div>
		</footer>

	</body>
</html>



