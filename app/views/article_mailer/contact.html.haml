%html
  %head
    = stylesheet_link_tag 'email/email'
  %body

    .l-container
      = render 'shared/email/header'
      .l-main
        .l-content-wrapper
          .l-content
            %h3
              Hallo
              = "#{@article.seller_nickname},"
            Ein*e Fairnopoly-Nutzer*in hat dir eine Rückfrage zu deinem Artikel
            = link_to "\"#{@article.title}\"", article_path(@article.id)
            gesandt:
            .message
              = simple_format @text

            %p
              Bitte sende Deine Antwort an
              = mail_to @from
            %p
              Den Artikel zu der Rückfrage findest Du unter
              = link_to article_url(@article), article_url(@article)
        .l-sidebar
          = render 'shared/email/social_buttons'
      = render 'shared/email/signature'
      = render 'shared/email/footer'
