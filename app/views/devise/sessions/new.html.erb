 <div class="well">
<h2><%=t('devise.title.login')%></h2>
<%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :email, :hint => t('devise.edit_profile.email') %>
    <%= f.input :password, :hint => t('devise.new_profile.password') %>
  		<% if devise_mapping.rememberable? -%>
	     	<%= f.input :remember_me, :as => :boolean , :label => false%> 
	  	<% end -%>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :button_html => {:class => "primary"} , :label => :login%>
  <% end %>
<% end %>

<%= render "links" %>
</div>
