 <div class="well">

<%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
  		<% if devise_mapping.rememberable? -%>
	     	<%= f.input :remember_me, :as => :boolean , :label => false%> 
	  	<% end -%>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :button_html => {:class => "btn btn-primary btn-large"} , :label => :login%>
  <% end %>
<% end %>

<%= render "links" %>
</div>

