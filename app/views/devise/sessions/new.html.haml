.fairnopoly-well
  = semantic_form_for(resource, :as => resource_name,:html => {:class => 'form-vertical'},  :url => session_path(resource_name)) do |f|
    = f.semantic_errors
    = f.inputs do
      = f.input :email, :tooltip => false
      = f.input :password, :tooltip => false
      - if devise_mapping.rememberable?
        = f.input :remember_me, :as => :boolean , :label => false
    = f.actions do
      = f.action :submit, :button_html => {:class => "btn btn-primary btn-large"} , :label => :login
  = render "links"
