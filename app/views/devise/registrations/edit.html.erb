
<div class="well">
		
				<div class="span3">
			<%= link_to (raw glyphicons("icon-chevron-left")) +" "+ t('common.actions.back'), :back , :class => "btn"%>
	  	</div>
		
		<hr />	
		<h1><%=t('common.actions.edit')%> <%= resource_name.to_s.humanize %></h1>
</div>

<div class="well">
<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
  	<%= f.input :name, :required => true%>
  	<%= f.input :surname, :required => true%>
    <%= f.input :email, :hint => t('devise.edit_profile.email'), :required => true %>
   
    <%= f.input :image, :hint => t('devise.edit_profile.image'), :lable => t('devise.edit_profile.picture') %>
   
    <%= f.input :password, :hint => t('devise.edit_profile.password') %>
    <%= f.input :password_confirmation, :hint => t('devise.edit_profile.password_confirmation') %>
    <%= f.input :current_password, :hint => t('devise.edit_profile.current_password'),:required => true %>
    
  <% end %>
  
  
  </div>
  <%= f.actions do %>
    <%= f.action :submit, :button_html => {:class => "primary"} %>
  <% end %>
<% end %>
