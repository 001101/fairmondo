<h2>Sign up</h2>

 <%if session[:invitor_name] && session[:invitor_surname] %>
 	
 	<div class="well">
 		<strong>
	 		<%=t('invitation.invitated')%>
	 		<%=session[:invitor_name]%> 
	 		<%=session[:invitor_surname]%>
 		</strong>
 	</div>
 <%end%>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <%= f.semantic_errors %>
  <%= f.inputs do %>
  	<%= f.input :name, :required => true%>
  	<%= f.input :surname, :required => true%>
  	
  	<%if session[:invited_email] %>
    	<%= f.input :email, :input_html => { :value => session[:invited_email] ,:readonly => true }%>
    <%else%>
    	<%= f.input :email, :hint => "Enter your email address", :required => true %>
    <%end%>
    
    <%= f.input :password, :hint => "Enter password" %>
    <%= f.input :password_confirmation, :hint => "Confirm password", :required => true %>
   
    <%if session[:invitor_id] %>
    	<%= f.input :invitor_id, :as => :hidden, :input_html => { :value => session[:invitor_id] ,:readonly => true }%>
  		<%= f.input :trustcommunity, :as => :hidden, :input_html => { :value => "true", :readonly => true }%>
  	<%end%>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :button_html => {:class => "primary"} %>
  <% end %>
<% end %>

<%= render "links" %>
