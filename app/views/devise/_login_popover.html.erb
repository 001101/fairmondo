<%= semantic_form_for(resource, :as => resource_name, :input_html => { :class => 'form-inline' } , :url => session_path(resource_name)) do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
  		<% if devise_mapping.rememberable? -%>
	     	<%= f.input :remember_me, :as => :boolean , :label => false%> 
	  	<% end -%>
  <% end %>
  <%= f.action :submit, :button_html => {:class => "btn btn-primary"} , :label => :login%>

  <%= render :partial => "/devise/links" , :locals => { :resource_name => :user , :devise_mapping => Devise.mappings[:user]} %>
<% end %>
		
