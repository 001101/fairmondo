= accordion_item item_name do
  - if sub_articles.empty?
    %strong= t("users.text.no_#{item_name}")
  - else
    = render :partial=>'/shared/list_articles', locals: { articles: sub_articles, list_class: "l-ArticleList" }
    = paginate sub_articles, params: { anchor: item_name } , param_name: "#{item_name}_articles_page"