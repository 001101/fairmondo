$('<%= "#library#{heartable.id}" %> .library-hearts').html('<i class="fa fa-heart"></i> <%= heartable.hearts.count %>');
$('<%= "#library#{heartable.id}" %> .Hearts-button').replaceWith('<%= j heart_button(heartable) %>');
<% if message %>
  $('<%= "#library#{heartable.id}" %> .Hearts-button').qtip({ // Grab some elements to apply the tooltip to
    content: {
        text: '<%= j message %>'
    },
    style: {
      classes: 'qtip-red'
    },
    show: true
  });
<% end %>