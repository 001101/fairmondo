.Content
  = semantic_form_for resource, url: step2_business_transaction_path(resource), html: { :class => 'transactions-form' } do |f|
    = render 'article_display'

    %h3
      = t 'transaction.edit.choose_purchase_data'
    = f.inputs do
      - if resource.is_a? MultipleFixedPriceTransaction
        = f.input :quantity_bought, input_html: { min: 1, max: resource.quantity_available, step: 1, value: default_value(:quantity_bought) || 1 }

      = f.input :selected_transport, include_blank: false, collection: resource.selected_transports, selected: default_value(:selected_transport)
      %ul.price-list
        = display_price_list_item :transport, :type1
        = display_price_list_item :transport, :type2

      = f.input :selected_payment, include_blank: false, collection: resource.selected_payments, selected: default_value(:selected_payment)
      %ul.price-list
        = display_price_list_item :payment, :cash_on_delivery
    %p.warning
      = t 'transaction.edit.security_warning'

    %h3
      = t 'transaction.edit.addresses'

    - if current_user.standard_address.valid?
      - resource.shipping_address = current_user.standard_address
      - resource.billing_address = current_user.standard_address
      .Grid
        = render 'addresses/address', address: resource.billing_address
    - elsif params && params[:business_transaction] && params[:business_transaction][:shipping_address_id]
      - resource.shipping_address = Address.find(params[:business_transaction][:shipping_address_id])
    - else
      = semantic_fields_for :billing_address do |f|
        = f.inputs do
          = f.input :title, as: :select, collection: [t('common.title.woman'),t('common.title.man')]
          = f.input :first_name, required: true
          = f.input :last_name, required: true
          = f.input :company_name
          = f.input :address_line_1, required: true
          = f.input :address_line_2
          = f.input :zip, required: true
          = f.input :city, required: true
          = f.input :country, required: true, as: :select, collection: [t('users.countries.germany')]

    = f.inputs do
      = f.input :shipping_address_id, as: :hidden, default: current_user.standard_address_id
      = f.input :billing_address_id, as: :hidden, default: current_user.standard_address_id
      = f.input :shipping_address, as: :radio, default: nil, collection: current_user.addresses, member_label: lambda { |address| render 'addresses/address', address: address }, wrapper_html: { class: 'address-list' }

    = link_to 'neue Adresse hinzuf√ºgen', new_user_address_path(current_user), { class: 'colorbox' }
    %hr

    %p.next_step
      = t 'transaction.edit.next_step_explanation'
    = f.actions do
      = f.action :submit, label: t('common.actions.continue'), button_html: { class: 'Button' }
