.content
  .Content
    = resource.body && resource.body.html_safe
    - if policy(resource).admin?
      = link_to "Edit", edit_content_url(resource)
      = link_to 'Overview', contents_path
.content-share
  = render '/shared/take_part'
.content-nav
  .Content
    %ul
      %li
        %a{:href => "/faq"}
          = t('footer.faq')
      %li
        %a{:href => "http://info.fairmondo.de/forum/"}
          = t('footer.forum')
      %li
        %a{:href => "/contact"}
          = t('footer.contact')
      %li
        %a{:href => "/about_us"}
          = t('footer.about_us')
      %li
        %a{:href => "http://info.fairmondo.de/team/"}
          = t('footer.team')
      %li
        %a{:href => "http://info.fairmondo.de"}
          = t('footer.blog')

