
.Grid-item
  .Address
    - if radio_button
      %p
        = radio_button_tag 'business_transaction[shipping_address_id]', "#{address.id}"
    %p
      %h2= "#{ address.title } #{ address.first_name } #{ address.last_name }"
      %p= address.address_line_1
      - if address.address_line_2?
        %p= address.address_line_2
      %p= "#{ address.zip } #{ address.city }"
      %p= address.country
      %br
    %p
      -# if controller.controller_name == 'registrations' || controller.controller_name == 'addresses'
      = link_to 'bearbeiten', edit_user_address_path(current_user, address), class: 'colorbox Button edit-button'
