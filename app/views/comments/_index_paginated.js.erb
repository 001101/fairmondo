$('.Comments-section .Comment-single').last().after('<%= j render partial: 'comments/comment', collection: comments  %>');

$('.Comments-section .next_link').replaceWith('<%= j(
    link_to_next_page comments,
    t("comments.more"),
    param_name: :comments_page,
    params: { "#{commentable.class.to_s.underscore}_id" => commentable.id, controller: "comments" },
    class: "next_link",
    remote: true) %>');

if ($('.next_link').length === 0) {
  $('.all_link').remove();
}
