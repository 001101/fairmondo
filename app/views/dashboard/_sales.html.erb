
		<div class="box" id="offers">
			<div class="box-legend box-legend-without-border">
				<a href="#offers">
				<h3><%= t('dashboard.headers.offers')+" ("+ @offers.count.to_s + ")" %> </h3>
				</a>
			</div>
			<div class="box-content padding-box">
				<div class="middle-margin-top">
					<% if !@offers || @offers.empty? %> 
						<div class="well">
							<strong><%= t('dashboard.text.no_offers')%></strong>
						</div>
					<%else%>
						<%= render :partial=>'/shared/list_auctions', :locals=>{ :auctions=> @offers, :paginate => false, :list_class=>"span3"} %>
					<%end%>
				</div>
			</div>
		</div>
		
		<div class="box" id="sold">
			<div class="box-legend box-legend-without-border">
				<a href="#sold">
				<h3><%=  t('dashboard.headers.sold')%></h3>
				</a>
			</div>
			<div class="box-content padding-box">
				<div class="middle-margin-top">
					<div class="well">
						<strong><%= t('dashboard.text.soon_sold')%></strong>
					</div>
				</div>
			</div>
		</div>
		
    <%= render_box "my_auction_templates" do %>
      <div class='private-links'>
        <ul class='nav nav-pills'>
          <li>
            <%= link_to t('auction_templates.actions.new'), new_auction_template_path %>
          </li>
        </ul>
      </div>
      <%= render :partial => "auction_templates/table" %>
    <% end %>
		
