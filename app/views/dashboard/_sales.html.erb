	<%= render_box "offers", :content_class => "padding-box" do %>	
		
		<% if !@offers || @offers.empty? %> 
			<div class="well">
				<strong><%= t('dashboard.text.no_offers')%></strong>
			</div>
		<%else%>
			<%= render :partial=>'/shared/list_auctions', :locals=>{ :auctions=> @offers, :list_class=>"span3"} %>
			<%= will_paginate @offers, :params => {:anchor => "offers" } , :param_name => "offers_page" %>
		<%end%>
	<%end%>			
		
	<% if !@inactive.empty? %> 
		<%= render_box "inactive",:content_class => "padding-box" do %>	
				<%= render :partial=>'/shared/list_auctions', :locals=>{ :auctions=> @inactive, :list_class=>"span3"} %>
				<%= will_paginate @inactive, :params => {:anchor => "inactive" } , :param_name => "inactive_page" %>
		<%end%>
	<%end%>
	
	<%= render_box "sold" do %>	
		<strong><%= t('dashboard.text.soon_sold')%></strong>
	<%end%>
				
    <%= render_box "my_auction_templates" do %>
      <div class='private-links'>
        <ul class='nav nav-pills'>
          <li>
            <%= link_to t('auction_templates.actions.new'), new_auction_template_path %>
          </li>
        </ul>
      </div>
      <%= render :partial => "auction_templates/table" %>
    <% end %>
		
