
<div class="row">
	<div class="span4">
		<% if @invitor%>
			<div class="span4">
				<h3><%=t('dashboard.headers.invitor')%>:</h3>
				<div class="thumbnail" style="position: relative;">
					<% if @invitor_image %>
							<%= link_to image_tag(@invitor.image.url(:thumb), :style=> "width:260; height:auto;"), dashboard_path(:id => @invitor.id) %>
					<%else%>
							<%= link_to image_tag("http://placehold.it/260x180" ,:style=> "width:260; height:auto;"), dashboard_path(:id => @invitor.id) %>
					<%end%>
					<div class="caption">
					      <h5><%= @invitor.name %> <%= @invitor.surname %></h5>
					</div>
				</div>
			</div>
			<!--
				<div class="span3">
