
<%if @user.legal_entity%>

	<div class="well">
		
		<h2><%= @user.nickname %></h2>
		<h3><%= @user.title + " " + @user.forename + " " + @user.surname %></h3>
		
		<p><%= t('devise.edit_profile.street')%>:	<strong><%= @user.street %></strong></p>
		<p><%= t('devise.edit_profile.city')%>:		<strong><%= @user.zip + " " + @user.city %></strong> </p>
		<p><%= t('devise.edit_profile.country')%>:	<strong><%= @user.country%></strong></p>
		<p><%= t('devise.edit_profile.mail')%>:		<strong><a href="mailto:<%= @user.email %>"><%= @user.email %></a></strong></p>
		<p><%= t('devise.edit_profile.fax')%>: 		<strong><%= @user.fax %></strong></p>
		
		<p><%= t('devise.edit_profile.phone')%>: 	<strong><%= @user.phone %></strong></p>
		<p><%= t('devise.edit_profile.mobile')%>: 	<strong><%= @user.mobile %></strong></p>

	</div>


	<div class="well">
		<p><strong><%= t('devise.edit_profile.terms')%>:</strong></p>
		<%= raw @user.terms %>
	</div>

	<div class="well">
		<p><strong><%= t('devise.edit_profile.cancellation')%>:</strong></p>
		<%= raw @user.cancellation %>
	</div>

	<div class="well">
		<p><strong><%= t('devise.edit_profile.about')%>:</strong></p>
		<%= raw @user.about %>
	</div>

<%end%>
