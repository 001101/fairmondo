<div class="well">
	<h2>Listing ffps</h2>

	<table class="table table-bordered">
		<tr>
			<th><%= t('ffp.formular.name')%></th>
			<th><%= t('ffp.formular.surname')%></th>
			<th><%= t('ffp.formular.email')%></th>
			<th><%= t('ffp.formular.price')%></th>
			<th><%= t('ffp.formular.activate')%></th>
			<th></th>
			<th></th>
			<!--<th></th>-->
		</tr>

		<% @ffps.each do |ffp| %>
		<tr>
			<td><%= ffp.name %></td>
			<td><%= ffp.surname %></td>
			<td><%= ffp.email %></td>
			<td><%= ffp.price %> â‚¬ </td>
			<td><%= ffp.activated%></td>

			<!-- <td><%= link_to 'Show', ffp %></td>-->
			<% if !ffp.activated? %>
			<td><%= link_to 'Confirm', edit_ffp_path(ffp) %></td>
			<% end %>

			<td><%= link_to 'Destroy', ffp, :confirm => 'Are you sure?', :method => :delete %></td>

		</tr>
		<% end %>
	</table>
	<%= will_paginate @ffps %>
</div>
