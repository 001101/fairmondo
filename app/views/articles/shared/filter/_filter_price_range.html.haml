.Search-filter.JS-active-toggle--container
  .Search-dropdown.JS-active-toggle--trigger{data: {clickable: true}}
    = title
  = semantic_form_for search_cache, url: articles_path, html: { method: 'get', class: "l-header-search-form JS-active-toggle--target" }, remote: true, builder: ::Fairtastic::FormBuilder do |f|
    %ul
      = f.inputs do
        %li
          = f.input :price_from, as: :number, tooltip: false
          = f.input :price_to, as: :number, tooltip: false
      = f.actions do
        %li
          %button.Button Anwenden
