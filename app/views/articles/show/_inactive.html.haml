.span3
  .fairnopoly-well
    = render_tooltip t("article.preview.tooltips.fees_and_donations")
    %h3
      = t('article.preview.fees_and_donations.title')
    %table.table.table-bordered.table-total
      %tbody
        %tr
          %td
            %b= raw t('article.preview.fees_and_donations.corruption_percent')
          %td= humanized_money_with_symbol @article.calculated_corruption
        %tr
          %td
            %b
            = t('article.preview.fees_and_donations.friendly_percent')
          %td= humanized_money_with_symbol @article.calculated_friendly
        %tr
          %td
            %b= t('article.preview.fees_and_donations.fee')
          %td= humanized_money_with_symbol @article.calculated_fee
        %tr.table-total-row
          %td
            %b= t('article.preview.fees_and_donations.total')
          %td= humanized_money_with_symbol @article.calculated_fees_and_donations
    = render_tooltip t("article.preview.tooltips.double_check")
    %h3= t("article.preview.double_check.title")
    = link_to t("article.labels.submit"), activate_article_path(@article), :class=>"btn btn-success"
