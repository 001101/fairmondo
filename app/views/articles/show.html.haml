- title truncate_and_sanitize_without_linebreaks @article.title, 70
- meta_description truncate_and_sanitize_without_linebreaks @article.content, 160
- meta_keywords @article.categories_and_ancestors.collect{ |c| c.name }.join(",")

.row
  .span9
    = render "/articles/show/article_contents", :article => resource
  - if @article.active
    = render "/articles/show/active", :article => resource
  - else
    = render "/articles/show/inactive", :article => resource