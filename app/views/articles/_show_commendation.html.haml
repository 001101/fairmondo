/ Be careful, between case and when should not be a empty line
- if @article.fair
  - case @article.fair_kind
  - when "social_producer"
    - if @article.social_producer_questionnaire
      %h3= t('enumerize.article.fair_kind.social_producer')
      .border-box.middle-padding
        - for attribute in @article.social_producer_questionnaire.attributes.keys
          - value = @article.social_producer_questionnaire.attributes[attribute]
          - if !attribute.to_s.downcase.include? "id"
            - if attribute.to_s.downcase.include? "purposes"
              .border-box.middle-padding
                %ul.unstyled
                  - value.each do |purpose|
                    %li.middle-padding-left
                      %p= t('enumerize.social_producer_questionnaire.'+attribute.to_s+ '.' + purpose)
                      %p
                        %strong= t('article.show.agree')
            - else
              %h5= t('formtastic.labels.article.social_producer_questionnaire.' + attribute.to_s)
              %p
                %strong
                  = value ? t('article.show.agree') : t('article.show.non_agree')
  - when "fair_trust"
    - if @article.fair_trust_questionnaire
      %h3= t('enumerize.article.fair_kind.fair_trust')
      .border-box.middle-padding
        - for attribute in @article.fair_trust_questionnaire.attributes.keys
          - value = @article.fair_trust_questionnaire.attributes[attribute]
          - if !attribute.to_s.downcase.include? "id"
            - if attribute.to_s.downcase.include? "explanation"
              %p
                = value.to_s
            - else
              %p= t('formtastic.labels.article.fair_trust_questionnaire.' + attribute.to_s)
              %p
                %strong
                  = value ? t('article.show.agree') : t('article.show.non_agree')
  - when "fair_seal"
    %h3= t('enumerize.article.fair_kind.fair_seal')
    .border-box.middle-padding
      %p
        %strong= t('enumerize.article.fair_seal.' + @article.fair_seal)
- if @article.ecologic
  %h3= t('formtastic.labels.article.ecologic')
  .border-box.middle-padding
    %p= t('enumerize.article.ecologic_kind.' + @article.ecologic_kind)
    - if @article.ecologic_kind == "ecologic_seal"
      %p= t('enumerize.article.ecologic_seal.' + @article.ecologic_seal)
    - if @article.ecologic_kind == "upcycling"
      %strong
        = @article.upcycling_reason
- if @article.small_and_precious
  %h3= t('formtastic.labels.article.small_and_precious')
  .border-box.middle-padding
    %p= t('formtastic.labels.article.small_and_precious_eu_small_enterprise')
    %p
      %strong
        = @article.small_and_precious_eu_small_enterprise ? t('article.show.agree') : t('article.show.non_agree')
    %p= t('formtastic.labels.article.small_and_precious_edition')
    %p
      %strong
        = @article.small_and_precious_edition
    %p= t('formtastic.labels.article.small_and_precious_reason')
    %p blalala
      %strong
        = @article.small_and_precious_reason
    %p= t('formtastic.labels.article.small_and_precious_handmade')
    %p
      %strong
        = @article.small_and_precious_handmade ? t('article.show.agree') : t('article.show.non_agree')
