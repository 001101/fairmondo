= accordion_item "library"+resource.id.to_s, :title => library_header_layout(resource), :arrow => false, :number => resource.library_elements.count do
  %p
    = render "library", :library => resource


-# Admin controls
- if User.is_admin?(current_user) && resource.public?
  .Admin-controls
    %h2 Administration:
    %h3 Sammlung featuren
    = semantic_form_for :library, url: user_library_path(resource.user, resource), method: :put do |f|
      = f.inputs do
        = f.input :exhibition_name, :as => :select, :collection => Library.exhibition_name.options
      = f.actions do
        = f.action :submit, button_html: {class: "Btn"}