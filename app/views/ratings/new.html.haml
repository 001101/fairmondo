.Rating
  = semantic_form_for resource, url: user_ratings_path, builder: Fairtastic::FormBuilder do |f|
    .Rating-left
      = render '/shared/profile_img', user: resource.transaction.seller, show_title: true

    .Rating-middle
      %h4 Deine Bewertung:
      = f.inputs do
        = f.input :transaction_id, :as => :hidden
        = f.input :rating, :as => :plain_radio, :label => false, :collection => {  image_tag("thumbs/thumb-up.jpg") => "positive", image_tag("thumbs/thumb-neutral.jpg") => "neutral",  image_tag("thumbs/thumb-down.jpg") => "negative"}
        = f.input :text, :label => 'Kommentar'

      .Rating-save
        = f.actions do
          = f.action :submit , :button_html => {:class => "Btn" }, :label => 'Bewertung speichern'

    .Rating-right.Article--teaser
      = render '/shared/show_article', :article=> resource.transaction.article

