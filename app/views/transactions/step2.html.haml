- selected_transport  = params["transaction"]["selected_transport"]
- selected_payment    = params["transaction"]["selected_payment"]
- quantity = params["transaction"]["quantity_bought"]
- quantity = (quantity.nil? || quantity.empty?) ? 1 : quantity.to_i
- forename = params["transaction"]["forename"]
- surname  = params["transaction"]["surname"]
- street   = params["transaction"]["street"]
- address_suffix = params["transaction"]["address_suffix"]
- city     = params["transaction"]["city"]
- zip      = params["transaction"]["zip"]
- country  = params["transaction"]["country"]

.l-Main
  .l-Inner
    .Content
      .Content-inner
        %h1
          = t 'transaction.edit.heading'

        = semantic_form_for @transaction do |f|
          = f.inputs do
            = f.hidden_field :selected_transport, value: selected_transport
            = f.hidden_field :selected_payment, value: selected_payment
            = f.hidden_field :quantity_bought, value: quantity

            = f.hidden_field :forename, value: forename
            = f.hidden_field :surname, value: surname
            = f.hidden_field :address_suffix, value: address_suffix
            = f.hidden_field :street, value: street
            = f.hidden_field :city, value: city
            = f.hidden_field :zip, value: zip
            = f.hidden_field :country, value: country

            = render 'article_display'
            %hr
            %p
              %br
              %h3
                = t 'transaction.edit.address'
              = forename + ' ' + surname
              %br
              - if address_suffix != ""
                = address_suffix
                %br
              = street
              %br
              = zip
              = city
              %br
              = country

            - if @transaction.article_seller.is_a?(LegalEntity)
              .about_terms_cancellation
                %hr
                %br
                %h3
                  = t 'transaction.edit.seller_data'

                %p
                  %i
                    = resource.article_seller.fullname

                #about
                  .Gray-border-display
                    %strong
                      = t 'transaction.edit.imprint'
                    .Scrollbox
                      = @transaction.article_seller_about

                #terms
                  .Gray-border-display
                    %strong
                      = t 'transaction.edit.terms'
                    .Scrollbox
                      = @transaction.article_seller_terms
                  = link_to 'Drucken', profile_user_path(resource.article_seller, print: 'terms'), class: 'Btn', target: '_blank'

                #cancellation
                  .Gray-border-display
                    %strong
                      = I18n.t 'transaction.edit.cancellation'
                    .Scrollbox
                      = @transaction.article_seller_cancellation
                  = link_to 'Drucken', profile_user_path(resource.article_seller, print: 'cancellation'), class: 'Btn', target: '_blank'

                %p
                  = f.input :tos_accepted
            %hr
            %br
            %h5
              = I18n.t 'transaction.edit.message'
            %p
              = f.input :message, label: false, input_html: { rows: 3 }

            %hr
            .small-image-left
              .gray-border
                - if @transaction.article.title_image == nil
                  %img{:src => image_path('missing.png'), :alt => "missing"}
                - else
                  %img{:src => @transaction.article.title_image_url(:thumb)}
                %figcaption
                  = link_to truncate( @transaction.article_title, :length => 25), article_path( @transaction.article )

            %br
            %h3
              = I18n.t 'transaction.edit.purchase_data'

            %p
            %table
              %colgroup
                %col{width: 150}
                %col{width: 300}
              %tr
                %td
                  %strong
                    = I18n.t('transaction.edit.payment_type')
                %td
                  = I18n.t('enumerize.transaction.selected_payment.' + selected_payment)
              %tr
                %td
                  %strong
                    = I18n.t('transaction.edit.transport_type')
                %td
                  = t('enumerize.transaction.selected_transport.' + selected_transport)
              - if ( selected_transport == 'type1' || selected_transport == 'type2' )
                %tr
                  %td
                    %strong
                      = I18n.t('transaction.edit.transport_provider')
                  %td
                    = @transaction.article_transport_provider selected_transport
            %br
            %h3
              = I18n.t 'transaction.edit.price_heading'

            %p
            %table
              %colgroup
                %col{width: 220}
                %col{width: 300}
              %tr
                %td
                  %strong
                    = t('transaction.edit.quantity_bought')
                %td
                  = quantity.to_s
              %tr
                %td
                  %strong
                    Verkaufspreis pro Stück:
                %td
                  = humanized_money_with_symbol @transaction.article_price
              %tr
                %td
                  %strong
                    = I18n.t('transaction.edit.sales_price')
                %td
                  = humanized_money_with_symbol(@transaction.article_price * quantity)

              - if resource.article_seller.is_a? LegalEntity
                %tr
                  %td
                    %strong
                      = t('transaction.edit.net')
                  %td
                    = humanized_money_with_symbol resource.article_price_without_vat quantity
                %tr
                  %td
                    %strong
                      = I18n.t 'transaction.edit.vat', percent: resource.article_vat
                  %td
                    = humanized_money_with_symbol resource.article_vat_price quantity

              - if selected_payment == 'cash_on_delivery'
                %tr
                  %td
                    %strong
                      = I18n.t('transaction.edit.payment_cash_on_delivery_price') + '*: '
                  %td
                    = humanized_money_with_symbol ( resource.article_payment_cash_on_delivery_price*quantity )

              - if ( resource.article_basic_price > 0  && resource.article_basic_price_amount)
                %tr
                  %td
                    %strong
                      = I18n.t('transaction.edit.basic_price')
                  %td
                    = humanized_money_with_symbol(resource.article_basic_price) + t('common.text.glue.per') +resource.article_basic_price_amount_text

            %small{ :class => 'donation'}
              = t ('transaction.edit.fair_percent'), donation: humanized_money_with_symbol(resource.article_calculated_fair * quantity)

          %hr
          %table
            %colgroup
              %col{width: 220}
              %col{width: 300}
            %tr
              %td
                %strong
                  = t('transaction.edit.shipping_and_handling') + '*: '
              %td
                = humanized_money_with_symbol(resource.article_transport_price(selected_transport, quantity))
                - if selected_transport == 'type1'
                  = "("+resource.article_transport_type1_provider+")"
                - elsif selected_transport == 'type2'
                  = "("+resource.article_transport_type2_provider+")"

          %hr
          %br
          %h2
            = display_total_price selected_transport, selected_payment, quantity

          %br
          = f.actions do
            = f.action :submit, label: t('transaction.actions.purchase'), button_html: { class: 'Btn'}
            = back_link quantity, selected_transport, selected_payment, forename, surname, street, address_suffix, city, zip, country
            %p
              %small * Zur Zeit unterstützen wir keine automatisierten Kombiversand- sowie -nachnahmegebühren. Bitte kläre vorab mit der Verkäufer*in, ob bei Kauf von mehreren Artikeln die Versandgebühren geringer ausfallen, da mehrere Artikel gemeinsam verschickt werden können.
