<ul class="thumbnails">
	<% @auctions.each do |auction| %>
	<li class="span3">
		<div class="thumbnail" style="position: relative;">
			<%= condition_label auction, "in-image" %>
			<% if auction.title_image%>
			<%= link_to image_tag(auction.title_image.image.url(:thumb), :size=> "260x180"), auction %>
			<%else%>
			<%= link_to image_tag("http://placehold.it/260x180" ,:size=> "260x180"), auction %>
			<%end%>
			<div class="caption">
				<h5><%= link_to truncate(auction.title, :length => 25), auction %></h5>
				<h5><%= humanized_money_with_symbol auction.price %></h5>
			</div>
			
		</div>
	</li>
	<%end%>
</ul>
<%= will_paginate @auctions %>