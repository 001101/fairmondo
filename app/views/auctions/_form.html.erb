<%= tinymce_assets %>

<%= render :partial => "auction_template_select" %>

<%= semantic_form_for @auction, :html => { :class => "form-horizontal"}, :builder => Fairtastic::FormBuilder do |f|  %>
  <%= f.semantic_errors %>
  
  <%= render :partial => "common_inputs", :locals => {:f => f} %>
  
  <%= render :partial => "auction_template_create_inputs" %>
	
  <%= f.actions :name => t('auction.form.fieldsets.double_check'), :hint => t('auction.hints.double_check')+"&nbsp;&nbsp;&nbsp;" do %>
    <%= f.action :submit , :button_html => {:class => "primary"} , :label => t("auction.labels.submit")%>
  <% end %>
<% end %>
