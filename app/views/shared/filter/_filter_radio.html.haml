.Filter.js-active-toggle--container
  .Filter-button.js-active-toggle--trigger{data: {clickable: true}}
    - if @search_cache && @search_cache.send(parameter)
      = t "enumerize.article_search_form.#{parameter}.#{@search_cache.send(parameter)}"
    - else
      = title
    %ul.js-active-toggle--target
      %li
        - if @search_cache && @search_cache.send(parameter)
          %a{href: articles_path(article_search_form: search_params_merged_with(parameter => nil))}
            Werte lÃ¶schen
      - values.each do |value|
        %li
          %a{href: articles_path(article_search_form: search_params_merged_with(parameter => value)), 'data-remote'.to_sym => 'true', method: :index }
            - if @search_cache && @search_cache.send(parameter) == value
              = image_tag "icheck/radio_active.png"
            - else
              = image_tag "icheck/radio.png"
            = t "enumerize.article_search_form.#{parameter}.#{value}"
