%div{id: 'name-rating'}
  %img{ :src => image_path('thumbs/thumb-up.jpg'), :alt => "good rating" }
  %span= user_resource.percentage_of_positive_ratings.to_s+"%"
  %img{ :src => image_path('thumbs/thumb-neutral.jpg'), :alt => "neutral rating" }
  %span= (100-user_resource.percentage_of_positive_ratings-user_resource.percentage_of_negative_ratings).to_s+"%"
  %img{ :src => image_path('thumbs/thumb-down.jpg'), :alt => "negative rating" }
  %span= user_resource.percentage_of_negative_ratings.to_s+"%"

